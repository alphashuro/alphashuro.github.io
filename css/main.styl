@import url("https://fonts.googleapis.com/css?family=Poiret+One|Indie+Flower|Quicksand")

indie()
  font-family 'Indie Flower', cursive
poiret()
  font-family 'Poiret One'
quicksand()
  font-family 'Quicksand', sans-serif

* {
  quicksand()
  font-size 1.1em
  color 222
}

a {
  transition all 0.3s
}

.quicksand {
  quicksand()
}

.poiret {
  poiret()
}

.indie {
  indie()
}


.navbar
  margin-bottom 0
  
  .navbar-header
    
    .navbar-brand
      padding 5px
      
      img
        max-width 50px

section
  min-height 100vh
  padding-top 40px
  padding-bottom 40px
  font-size 1.5em
  box-shadow inset 0 0 5px black

  .section-header
    text-align center
    margin-bottom 40px
    poiret()
    text-decoration underline
    
    h1 
      font-size 4em
      
  .section-content
    padding 10px
  
  &#intro

    .intro-text
      position absolute
      color white
      z-index 1
      font-size 2em
      margin 50px
      left 0
      right 0
      margin-top 10px
    
    #intro-carousel
      .carousel-inner
        .item
          background-color #222
          p
            indie()
            
  &#about
    display flex
    flex-direction column
    
    .section-content
      align-self flex-end
      margin 50px
      margin-top auto
      
      img
        max-height 500px
      
  &#skills
    .section-content
      display flex
      flex-wrap wrap
      justify-content center
      
      .skill
        width 300px
        margin 50px
        text-align center
        
        img
          width 100%

  &#portfolio
    ul
      display flex
      list-style none
      align-items center
      justify-content center
      flex-wrap wrap

      li
        padding 10px
        text-align center
        transition all 0.3s
        filter blur(2px) greyscale(100%)
        -webkit-filter blur(2px) grayscale(100%)
          
        a 
          indie()
          color #656565
            
          img
            box-shadow 0 0 10px black

        &:hover
          filter blur(0px) greyscale(0%)
          -webkit-filter blur(0px) grayscale(0%)
          
          a
            color #337AB7