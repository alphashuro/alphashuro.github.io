  body
    // Nav
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(
          type='button', 
          data-toggle='collapse', 
          data-target='#navbar-collapse', 
          aria-expanded='false' )

            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
